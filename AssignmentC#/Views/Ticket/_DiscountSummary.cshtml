@model PurchaseVM

@{
    var q = @Model.TicketQuantity;
    var s = @Model.TicketSubtotal;
    var o = @Model.OrderSubtotal;

    decimal sub = s;
    decimal total = 0;

    var d = @Model.DiscountAmount;
    if(d == 0)
    {
        total = sub + o;
    }
    else
    {
        total = sub + o - d;
    }
}

<h3>Order Summary</h3>
<div class="summary-row"><span>Standard Ticket ( x @q )</span><span>RM @s.ToString("0.00")</span></div>
<div class="summary-row"><span>Add-On</span><span>RM @o.ToString("0.00")</span></div>
<div class="summary-row"><span>Discount</span><span>- RM @d.ToString("0.00")</span></div>
<div class="summary-row summary-total"><span>Total Payable</span><span>RM @total.ToString("0.00")</span></div>