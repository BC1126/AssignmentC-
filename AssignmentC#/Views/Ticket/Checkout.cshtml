@section head {
    <link href="/css/ticket.css" rel="stylesheet" />
}


<h1>Payment Method</h1>
<section id="detail" class="paymentMethod">
    <div class="paymentDetail">
        <div class="method">
            <h3>Payment Options</h3>
            <div>
                <div>
                    <input type="radio" name="method" id="creditcard" value="" />
                    <label for="creditcard"><i class="fa-regular fa-credit-card"></i> Credit Card</label>
                </div>

                <div>
                    <input type="radio" name="method" id="ewallet" value="" />
                    <label for="ewallet"><i class="fa-solid fa-wallet"></i> E-wallet</label>
                </div>

                <div>
                    <input type="radio" name="method" id="paypal" value="" />
                    <label for="paypal"><i class="fa-brands fa-paypal"></i> Paypal</label>
                </div>
            </div>


            
        </div>

        <div class="paymentInput">
            <input type="text" name="" placeholder="Credit Card Number" />
            <div>
                <input type="month" value="" />
                <input type="text" placeholder="CVV" />
            </div>
        </div>
    </div>

    <!---------------->
