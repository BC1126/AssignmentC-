        <div class="purchaseDetail">
            <div>
                <div>
                    <span>No. of Tickets :</span>
                    <span>Adult x 1</span>
                </div>
                <div class="displayPrice">
                    RM20.00
                </div>
            </div>

            <div>
                <div>
                    <span>Add-On :</span>
                    <span>Combo A x 1</span>
                </div>
                <div class="displayPrice">
                    RM20.00
                </div>
            </div>
        </div>
        

        <hr />

        <div class="amount">
            <div class="subtotal">
                <div>
                    <span>Subtotal</span>
                </div>
                <div class="displayPrice">
                    RM40.00
                </div>
            </div>

            <div class="discount">
                <div>
                    <span>Discount</span>
                </div>
                <div class="displayPrice">
                    - RM10.00
                </div>
            </div>

            <hr />

            <div class="total">
                <div>
                    <span>Total</span>
                </div>
                <div class="displayPrice">
                    RM30.00
                </div>
            </div>
        </div>
    </div>

</section>

