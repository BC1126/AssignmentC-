@model AssignmentC_.Models.LoginVM

@{
    ViewData["Title"] = "Login";
}

<style>
    /* Styling for the hover effect on the forgot password link */
    .forgot-link:hover {
        color: #ff5500 !important;
        transition: color 0.3s ease;
        text-decoration: underline;
    }
</style>

<section id="login" class="p_3">
    <div class="container-xl">
        <div class="row login_1 justify-content-center">
            <div class="col-md-12">
                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="login_1m p-5 px-4 w-50 mx-auto bg-light shadow-sm">

                        <h2 class="text-center mb-4 fw-bold">User Login</h2>

                        @if (TempData["Info"] != null)
                        {
                            <div class="mb-3">
                                @Html.Raw(TempData["Info"])
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <h6 class="mb-2 fw-bold">Email Address</h6>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <h6 class="mb-2 fw-bold mt-4">Password</h6>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <h6 class="mb-2 fw-bold mt-4">Security Verification</h6>

                            <input type="hidden" name="encryptedCaptcha" value="@ViewBag.EncryptedCaptcha" />

                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-dark p-2 fs-5 text-uppercase" style="letter-spacing: 5px; min-width: 120px; display: inline-block;">
                                    @ViewBag.CaptchaCode
                                </span>
                                <small class="ms-3 text-muted">Type the code above</small>
                            </div>

                            <input asp-for="CaptchaInput" class="form-control" placeholder="Enter code" autocomplete="off" />
                            <span asp-validation-for="CaptchaInput" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4 mt-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label fw-normal">Remember Me</label>
                        </div>

                        <div class="mt-4">
                            <h6 class="mt-3 center_sm">
                                <button type="submit" class="button d-block text-center w-100">Log In</button>
                            </h6>
                        </div>

                        <div class="mt-4 text-center">
                            <p class="mb-0">
                                Don't have an account?
                                <a asp-controller="User" asp-action="Register" class="fw-bold rol_oran">Sign Up here</a>
                            </p>
                            <p class="mt-2 mb-0">
                                <a asp-controller="User" asp-action="ForgotPassword" class="text-muted small forgot-link">Forgot your password?</a>
                            </p>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>