@model LoginVM

@{
    ViewData["Title"] = "Login";
}

@section title {
    <section id="center" class="centre_o pt-5 pb-5">
        <div class="container-xl">
            <div class="row centre_o1 text-center">
                <div class="col-md-12">
                    <h1 class="text-white font_60">Login</h1>
                    <h5 class="mb-0 mt-3 fw-normal col_oran">
                        <a class="text-light" href="#">Home</a>
                        <span class="mx-2 text-muted">/</span> Login
                    </h5>
                </div>
            </div>
        </div>
    </section>
}

<section id="login" class="p_3">
    <div class="container-xl">
        <div class="row login_1">
            <div class="col-md-12">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="login_1m p-5 px-4 bg-light w-50 mx-auto">

                        @* Display validation errors for the whole model *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* Email/Username Field Conversion *@
                        <h6 class="mb-3 fw-bold">Username</h6>
                        <input asp-for="Email" class="form-control" placeholder="Email" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>


                        @* Password Field Conversion *@
                        <h6 class="mb-3 fw-bold mt-4">Password</h6>
                        @* asp-for="Password" automatically sets the type to "password" based on the [DataType] annotation in LoginVM *@
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <div class="login_1mi row mt-3">
                            <div class="col-md-6 col-6">
                                <div class="login_1mil">
                                    <div class="form-check">
                                        @* Remember Me Checkbox Conversion *@
                                        <input asp-for="RememberMe" class="form-check-input" id="customCheck1" />
                                        <label class="form-check-label" for="customCheck1">Remember Me</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-6">
                                <div class="login_1mir text-end">
                                    <h6 class="mb-0"><a href="#">Forgot Password?</a></h6>
                                </div>
                            </div>
                        </div>

                        @* Submit Button Conversion *@
                        <h6 class="mt-3 center_sm">
                            <button type="submit" class="button_2 d-block text-center w-100">LOGIN</button>
                        </h6>

                        <p class="mt-3 mb-0 text-center">Don't have an account? <a class="fw-bold a_tag" href="register.html">Create One</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
