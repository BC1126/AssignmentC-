@{
    ViewData["Title"] = "Administrator Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1>Welcome to Administrator Dashboard</h1>
        <p class="text-muted">This is your central control panel for comprehensive system management.</p>
    </div>

    <div class="row g-4">

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-top border-0 border-4 border-primary">
                <div class="card-body text-center d-flex flex-column">
                    <div class="mb-3 text-primary">
                        <i class="fa fa-users fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold text-primary">User Management</h5>
                    <p class="card-text small text-muted">Create, edit, and view user details.</p>
                    <a asp-controller="User" asp-action="MemberList" class="btn btn-primary w-100 mt-auto">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-top border-0 border-4 border-info">
                <div class="card-body text-center d-flex flex-column">
                    <div class="mb-3 text-info">
                        <i class="fa fa-chart-bar fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold text-info">Reports & Analytics</h5>
                    <p class="card-text small text-muted">Generate detailed system reports and visualize sales data.</p>

                    <div class="mt-auto w-100">
                        <div class="btn-group w-100">
                            <button type="button" class="btn btn-info text-white dropdown-toggle w-100" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-file-alt me-2"></i> View Reports
                            </button>
                            <ul class="dropdown-menu w-100">
                                <li><h6 class="dropdown-header">Food & Beverage</h6></li>
                                <li><a class="dropdown-item" href="/Report/ProductReport">Food Report</a></li>
                                <li><a class="dropdown-item" href="/Report/SalesChart">Food Sales Chart</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">Cinema & Tickets</h6></li>
                                <li><a class="dropdown-item" href="/Report/MovieTicketReport">Movie Ticket Report</a></li>
                                <li><a class="dropdown-item" href="/Report/MovieTicketSalesChart">Movie Ticket Sales Chart</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-top border-0 border-4 border-success">
                <div class="card-body text-center d-flex flex-column">
                    <div class="mb-3 text-success">
                        <i class="fa fa-box fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold text-success">Product Management</h5>
                    <p class="card-text small text-muted">Oversee products, inventory, and review orders.</p>
                    <div class="mt-auto">
                        <a href="/Product/Index" class="btn btn-success w-100 mb-2">Manage Products</a>
                        <a href="/Admin/ViewOrder" class="btn btn-outline-success w-100">View All Orders</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-top border-0 border-4 border-danger">
                <div class="card-body text-center d-flex flex-column">
                    <div class="mb-3 text-danger">
                        <i class="fa fa-film fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold text-danger">Movie Management</h5>
                    <p class="card-text small text-muted">Add movies, set schedules, and configure ticketing.</p>
                    <div class="mt-auto">
                        <a asp-controller="Movie" asp-action="Movies" class="btn btn-danger w-100 mb-2">Manage Movies</a>
                        <a asp-controller="ShowTime" asp-action="ShowTimeManage" class="btn btn-danger w-100 mb-2">Manage ShowTime</a>
                        <a href="/ActionLog/ActionLogList" class="btn btn-outline-danger w-100">View Logs</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-top border-0 border-4 border-warning">
                <div class="card-body text-center d-flex flex-column">
                    <div class="mb-3 text-warning">
                        <i class="fa fa-building fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold text-warning">Hall Management</h5>
                    <p class="card-text small text-muted">Configure cinema halls, seating layouts, and capacity.</p>
                    <a href="/Hall/ManageHalls" class="btn btn-warning w-100 mt-auto text-dark">Manage Halls</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-top border-0 border-4 border-dark">
                <div class="card-body text-center d-flex flex-column">
                    <div class="mb-3 text-dark">
                        <i class="fa fa-ticket-alt fa-3x"></i>
                    </div>
                    <h5 class="card-title fw-bold text-dark">Booking Management</h5>
                    <p class="card-text small text-muted">List of Booking details, seating layouts, and totals.</p>
                    <a href="/Booking/BookingManagement" class="btn btn-dark w-100 mt-auto text-light">View Bookings</a>
                </div>
            </div>
        </div>

    </div>
</div>