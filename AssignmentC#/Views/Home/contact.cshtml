<section id="contact" class="p_3 bg_light">
    <div class="container-xl">
        <h1 class="col_oran font_60">Contact Us</h1>
        <div class="row trend_1 text-center mb-5">
            <div class="col-md-12">
                <span class="fa fa-film col_oran font_50"></span>
                <h6 class="text-muted mt-3">We'd love to hear from you</h6>
                <h1 class="mb-0 font_50">
                    Questions about a movie <br> or a booking?
                </h1>
            </div>
        </div>

        <div class="row w-75 mx-auto bg-white shadow_box p-5 rounded-3">
            <div class="col-md-12">
                <form method="post" asp-action="Contact" asp-controller="Home">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Your Name</label>
                            <input class="form-control" name="Name" placeholder="John Doe" type="text" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email Address</label>
                            <input class="form-control" name="Email" placeholder="name@example.com" type="email" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone Number</label>
                            <input class="form-control" name="Phone" placeholder="+60 12 345 6789" type="tel">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Subject</label>
                            <select class="form-control form-select" name="Subject">
                                <option>General Inquiry</option>
                                <option>Ticket Booking Issue</option>
                                <option>Refund Request</option>
                                <option>Private Hall Booking</option>
                                <option>Feedback</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <label class="form-label">Message</label>
                            <textarea name="Message" placeholder="How can we help you today?" class="form-control form_text" rows="5" required></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="button_2 border-0 px-5 py-3">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="row contact_1 mt-5">
            <div class="col-md-4">
                <div class="contact_1i shadow_box p-4 h-100 bg-white">
                    <div class="contact_1i1 row align-items-center">
                        <div class="col-md-9">
                            <div class="contact_1i1l">
                                <h4 class="mb-3">Support</h4>
                                <p class="mb-0 text-muted">Need help with a refund or student booking? Our desk is open 8:30 AM - 5:30 PM.</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            <div class="contact_1i1r">
                                <span class="font_50 col_oran"><i class="fa fa-headset"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact_1i shadow_box p-4 h-100 bg-white">
                    <div class="contact_1i1 row align-items-center">
                        <div class="col-md-9">
                            <div class="contact_1i1l">
                                <h4 class="mb-3">Address</h4>
                                <p class="mb-0 text-muted">77, Lorong Lembah Permai 3, <br> 11200 Tanjung Bungah, Pulau Pinang</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            <div class="contact_1i1r">
                                <span class="font_50 col_oran"><i class="fa fa-map-marker-alt"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact_1i shadow_box p-4 h-100 bg-white">
                    <div class="contact_1i1 row align-items-center">
                        <div class="col-md-9">
                            <div class="contact_1i1l">
                                <h4 class="mb-3">Contact</h4>
                                <h6 class="mb-1"><a href="tel:+6048995230" class="text-dark">+60 4-899 5230</a></h6>
                                <h6 class="mb-0"><a href="mailto:info@cinema-tar.com" class="text-dark">info@cinema-tar.com</a></h6>
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            <div class="contact_1i1r">
                                <span class="font_50 col_oran"><i class="fa fa-envelope-open"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row contact_2 mt-5">
            <div class="col-md-12">
                <div class="shadow_box p-2 bg-white rounded">
                    <iframe width="100%"
                            height="450"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"
                            src="https://maps.google.com/maps?q=TAR+UMT+Penang+Branch&t=&z=15&ie=UTF8&iwloc=&output=embed">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>