@model List<AssignmentC_.Models.ShowTime>

<table class="table table-bordered table-hover table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:40px;"><input type="checkbox" id="checkAll" /></th>

            <th style="cursor:pointer;" onclick="sortShowTimes('Movie')">
                Movie @(ViewBag.Sort == "Movie" ? (ViewBag.Dir == "asc" ? "▲" : "▼") : "")
            </th>

            <th style="cursor:pointer;" onclick="sortShowTimes('Outlet')">
                Outlet @(ViewBag.Sort == "Outlet" ? (ViewBag.Dir == "asc" ? "▲" : "▼") : "")
            </th>

            <th style="cursor:pointer;" onclick="sortShowTimes('Hall')">
                Hall @(ViewBag.Sort == "Hall" ? (ViewBag.Dir == "asc" ? "▲" : "▼") : "")
            </th>

            <th style="cursor:pointer;" onclick="sortShowTimes('Date')">
                Date @(ViewBag.Sort == "Date" ? (ViewBag.Dir == "asc" ? "▲" : "▼") : "")
            </th>

            <th>Start</th>
            <th>End</th>

            <th style="cursor:pointer;" onclick="sortShowTimes('Price')">
                Price @(ViewBag.Sort == "Price" ? (ViewBag.Dir == "asc" ? "▲" : "▼") : "")
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="9" class="text-center text-muted p-4">
                    No showtimes found for this page.
                </td>
            </tr>
        }
        else
        {
            @foreach (var st in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" class="row-check" name="selectedIds" value="@st.ShowTimeId" />
                    </td>
                    <td class="fw-bold text-primary">@st.Movie.Title</td>
                    <td>@st.Hall?.Outlet?.Name</td>
                    <td><span class="badge bg-secondary">@st.Hall?.Name</span></td>
                    <td>@st.StartTime.ToString("dd MMM yyyy")</td>
                    <td class="text-success fw-bold">@st.StartTime.ToString("hh:mm tt")</td>
                    <td class="text-muted">@st.EndTime.ToString("hh:mm tt")</td>
                    <td>RM @st.TicketPrice.ToString("F2")</td>
                    <td>
                        <a asp-action="EditShowTime" asp-route-id="@st.ShowTimeId" class="btn btn-sm btn-outline-warning" title="Edit">
                            Edit
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger single-delete" data-id="@st.ShowTimeId" title="Delete">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            @{
                int currentPage = ViewBag.CurrentPage;
                int totalPages = ViewBag.TotalPages;
            }

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <button type="button" class="page-link" onclick="loadShowTimes(@(currentPage - 1))">Previous</button>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <button type="button" class="page-link" onclick="loadShowTimes(@i)">@i</button>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <button type="button" class="page-link" onclick="loadShowTimes(@(currentPage + 1))">Next</button>
            </li>
        </ul>
    </nav>
}