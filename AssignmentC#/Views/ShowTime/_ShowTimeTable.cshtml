@model List<AssignmentC_.Models.ShowTime>

<table class="table table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th style="width:40px;">
                <input type="checkbox" id="checkAll" />
            </th>
            <th>Movie</th>
            <th>Outlet</th>
            <th>Hall</th>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center text-muted">
                    No showtimes scheduled for the selected filters.
                </td>
            </tr>
        }
        else
        {
            @foreach (var st in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox"
                               class="row-check"
                               name="selectedIds"
                               value="@st.ShowTimeId" />
                    </td>
                    <td>@st.Movie.Title</td>
                    @* Accessing navigation properties: ShowTime -> Hall -> Outlet *@
                    <td>@st.Hall?.Outlet?.Name</td>
                    <td>@st.Hall?.Name</td>
                    <td>@st.StartTime.ToString("yyyy-MM-dd")</td>
                    <td>@st.StartTime.ToString("HH:mm")</td>
                    <td>@st.EndTime.ToString("HH:mm")</td>
                    <td>RM @st.TicketPrice</td>
                    <td>
                        <a asp-action="EditShowTime"
                           asp-route-id="@st.ShowTimeId"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>

                        <button type="button"
                                class="btn btn-sm btn-danger single-delete"
                                data-id="@st.ShowTimeId">
                            Delete
                        </button>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>