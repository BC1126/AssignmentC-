@model IEnumerable<Product>

@{
    Dictionary<string, int> cart = ViewBag.Cart ?? new Dictionary<string, int>();
}

<div class="products-container">
    <div class="products">
        @foreach (var p in Model)
        {
            var quantity = cart.ContainsKey(p.Id) ? cart[p.Id] : 0;

            <div class="product-card">
                <div class="product-image-container">
                    <img src="@p.PhotoURL" alt="@p.Name" class="product-image" />
                    @if (quantity > 0)
                    {
                        <span class="in-cart-badge">@quantity in cart</span>
                    }
                </div>

                <div class="product-details">
                    <h4>@p.Name</h4>
                    <p class="product-desc">@p.Description</p>
                    <p><strong>Price:</strong> RM @p.Price</p>
                    <p><strong>Stock:</strong> @p.Stock</p>

                    <form method="post" action="/Product/UpdateCart" class="cart-form">
                        <input type="hidden" name="ProductId" value="@p.Id" />

                        <div class="quantity-control">
                            <button type="button" class="btn-minus">−</button>
                            <input type="number" name="Quantity" min="0" max="@p.Stock" value="@quantity" />
                            <button type="button" class="btn-plus">+</button>
                        </div>

                        <button type="submit" class="btn-add">Add</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .products-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .products {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    .product-card {
        border-radius: 8px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        display: flex;
        flex-direction: column;
        font-size: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }

    .product-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .in-cart-badge {
        position: absolute;
        top: 5px;
        right: 5px;
        background: #28a745;
        color: #fff;
        font-size: 11px;
        padding: 2px 6px;
        border-radius: 12px;
        font-weight: bold;
    }

    .product-details {
        padding: 6px;
        display: flex;
        flex-direction: column;
        gap: 3px;
        align-items: center;
        text-align: center;
    }

    .product-desc {
        font-size: 10px;
        color: #555;
        height: 20px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .quantity-control {
        display: flex;
        gap: 5px;
        align-items: center;
        justify-content: center;
        margin-bottom: 5px;
    }

        .quantity-control input[type="number"] {
            width: 40px;
            text-align: center;
            padding: 1px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 12px;
        }

    .btn-minus, .btn-plus {
        width: 26px;
        height: 26px;
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-minus:hover, .btn-plus:hover {
            background: #0056b3;
        }

    .btn-add {
        background: #28a745;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 3px 6px;
        font-weight: bold;
        cursor: pointer;
        font-size: 12px;
    }

        .btn-add:hover {
            background: #218838;
        }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Plus button
        $(document).on('click', '.btn-plus', function () {
            var input = $(this).siblings('input[name="Quantity"]');
            var max = parseInt(input.attr('max')) || 100;
            var val = parseInt(input.val()) || 0;
            if (val < max) input.val(val + 1);
        });

        // Minus button
        $(document).on('click', '.btn-minus', function () {
            var input = $(this).siblings('input[name="Quantity"]');
            var min = parseInt(input.attr('min')) || 0;
            var val = parseInt(input.val()) || 0;
            if (val > min) input.val(val - 1);
        });

        // Optional: AJAX submit to update cart without reload
        $(document).on('submit', '.cart-form', function (e) {
            e.preventDefault();
            var form = $(this);
            $.post(form.attr('action'), form.serialize(), function() {
                location.reload(); // reload page to update cart badge
            });
        });
    });
</script>


