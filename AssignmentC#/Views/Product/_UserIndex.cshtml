@model IEnumerable<Product>

@{
    Dictionary<string, int> cart = ViewBag.Cart ?? new Dictionary<string, int>();
}




<div class="products-container">
    <div class="products">
        @foreach (var p in Model)
        {
            var quantity = cart.ContainsKey(p.Id) ? cart[p.Id] : 0;

            <div class="product-card">
                <div class="product-image-container">
                    <img src="@p.PhotoURL" alt="@p.Name" class="product-image" />
                    @if (quantity > 0)
                    {
                        <span class="in-cart-badge">@quantity in cart</span>
                    }
                </div>

                <div class="product-details">
                    <h4>@p.Name</h4>
                    <p class="product-desc">@p.Description</p>
                    <p><strong>Price:</strong> RM @p.Price</p>
                    <p><strong>Stock:</strong> @p.Stock</p>

                    <form method="post" action="/Product/UpdateCart" class="cart-form">
                        <input type="hidden" name="ProductId" value="@p.Id" />

                        <div class="quantity-control">
                            <button type="button" class="btn-minus">−</button>
                            <input type="number" name="Quantity" min="0" max="@p.Stock" value="@quantity" />
                            <button type="button" class="btn-plus">+</button>
                        </div>

                        <button type="submit" class="btn-add">Add</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@if (Model is X.PagedList.IPagedList<Product> paged)
{
    <div class="pagination-wrapper">
        @if (paged.HasPreviousPage)
        {
            <a href="#" class="page-link" data-page="@(paged.PageNumber - 1)">« Prev</a>
        }

        <span style="margin:0 10px;">
            Page @paged.PageNumber of @paged.PageCount
        </span>

        @if (paged.HasNextPage)
        {
            <a href="#" class="page-link" data-page="@(paged.PageNumber + 1)">Next »</a>
        }
    </div>
}

<<style>
     .products-container {
         max-width: 1200px;
         margin: 0 auto;
         padding: 10px;
     }

     /* 3 cards per row */
     .products {
         display: grid;
         grid-template-columns: repeat(3, 1fr);
         gap: 20px;
     }

     .product-card {
         border-radius: 12px;
         background: #fff;
         box-shadow: 0 2px 8px rgba(0,0,0,0.12);
         display: flex;
         flex-direction: column;
         font-size: 13px;
         transition: all 0.2s ease;
     }

         .product-card:hover {
             transform: translateY(-4px);
             box-shadow: 0 8px 18px rgba(0,0,0,0.15);
         }

     .product-image-container {
         height: auto; /* allow the image to keep its original ratio */
         max-height: 220px; /* optional max size */
         position: relative;
         overflow: hidden;
         border-top-left-radius: 12px;
         border-top-right-radius: 12px;
     }

     .product-image {
         width: 100%;
         height: 100%;
         object-fit: contain;
     }


     .in-cart-badge {
         position: absolute;
         top: 8px;
         right: 8px;
         background: #28a745;
         color: #fff;
         font-size: 11px;
         padding: 3px 7px;
         border-radius: 12px;
     }

     .product-details {
         padding: 10px;
         text-align: center;
     }

         .product-details h4 {
             font-size: 15px;
             margin: 6px 0;
             font-weight: 600;
         }

     .product-desc {
         font-size: 12px;
         color: #555;
         margin-bottom: 8px;
         white-space: nowrap;
         overflow: hidden;
         text-overflow: ellipsis;
     }

     .product-details p {
         margin: 3px 0;
         font-size: 12px;
     }

     .quantity-control {
         display: flex;
         justify-content: center;
         align-items: center;
         gap: 6px;
         margin: 8px 0;
     }

         .quantity-control input {
             width: 42px;
             height: 28px;
             text-align: center;
             font-size: 13px;
         }

     .btn-minus,
     .btn-plus {
         width: 28px;
         height: 28px;
         border-radius: 50%;
         background: #007bff;
         color: #fff;
         border: none;
         font-size: 15px;
         cursor: pointer;
     }

     .btn-add {
         margin-top: 6px;
         width: 100%;
         background: #28a745;
         color: #fff;
         border: none;
         border-radius: 8px;
         padding: 6px 0;
         font-size: 13px;
         font-weight: 600;
         transition: background 0.3s ease;
     }

         .btn-add:hover {
             background: #218838;
         }

     /* Modern pagination */
     .pagination-wrapper {
         margin-top: 30px;
         text-align: center;
     }

         .pagination-wrapper a,
         .pagination-wrapper span {
             display: inline-block;
             margin: 0 6px;
             padding: 6px 12px;
             border-radius: 6px;
             text-decoration: none;
             font-weight: 500;
             transition: background 0.3s, color 0.3s;
         }

         .pagination-wrapper a {
             color: #007bff;
             border: 1px solid #007bff;
         }

             .pagination-wrapper a:hover {
                 background: #007bff;
                 color: #fff;
             }

         .pagination-wrapper span {
             background: #007bff;
             color: #fff;
             border: 1px solid #007bff;
         }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Plus button
        $(document).on('click', '.btn-plus', function () {
            var input = $(this).siblings('input[name="Quantity"]');
            var max = parseInt(input.attr('max')) || 100;
            var val = parseInt(input.val()) || 0;
            if (val < max) input.val(val + 1);
        });

        // Minus button
        $(document).on('click', '.btn-minus', function () {
            var input = $(this).siblings('input[name="Quantity"]');
            var min = parseInt(input.attr('min')) || 0;
            var val = parseInt(input.val()) || 0;
            if (val > min) input.val(val - 1);
        });

        // Optional: AJAX submit to update cart without reload
        $(document).on('submit', '.cart-form', function (e) {
            e.preventDefault();
            var form = $(this);
            $.post(form.attr('action'), form.serialize(), function() {
                location.reload(); // reload page to update cart badge
            });
        });
    });
</script>


