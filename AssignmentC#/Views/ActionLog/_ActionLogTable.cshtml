@model AssignmentC_.Models.ActionLogViewModel

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>User Email</th>
                <th>User Name</th>
                <th>User Role</th>
                <th>Entity</th>
                <th>Action</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Logs.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">No logs found.</td>
                </tr>
            }
            else
            {
                foreach (var log in Model.Logs)
                {
                    <tr>
                        <td>@log.UserEmail</td>
                        <td>@log.UserName</td>
                        <td>@log.UserRole</td>
                        <td>@log.Entity</td>
                        <td style="white-space: pre-wrap;">@log.Action</td>
                        <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @* Previous Button *@
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" data-ajax="true" data-ajax-update="#logTarget" data-ajax-loading="#loader"
                   href="@Url.Action("ActionLogList", new { name = Model.SearchName, from = Model.FromDate, to = Model.ToDate, page = Model.CurrentPage - 1 })">Previous</a>
            </li>

            @{
                int startPage = Math.Max(1, Model.CurrentPage - 2);
                int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                // Show First Page if far away
                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" data-ajax="true" data-ajax-update="#logTarget" data-ajax-loading="#loader"
                           href="@Url.Action("ActionLogList", new { name = Model.SearchName, from = Model.FromDate, to = Model.ToDate, page = 1 })">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                // Show Window of Pages
                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" data-ajax="true" data-ajax-update="#logTarget" data-ajax-loading="#loader"
                           href="@Url.Action("ActionLogList", new { name = Model.SearchName, from = Model.FromDate, to = Model.ToDate, page = i })">@i</a>
                    </li>
                }

                // Show Last Page if far away
                if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" data-ajax="true" data-ajax-update="#logTarget" data-ajax-loading="#loader"
                           href="@Url.Action("ActionLogList", new { name = Model.SearchName, from = Model.FromDate, to = Model.ToDate, page = Model.TotalPages })">@Model.TotalPages</a>
                    </li>
                }
            }

            @* Next Button *@
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" data-ajax="true" data-ajax-update="#logTarget" data-ajax-loading="#loader"
                   href="@Url.Action("ActionLogList", new { name = Model.SearchName, from = Model.FromDate, to = Model.ToDate, page = Model.CurrentPage + 1 })">Next</a>
            </li>
        </ul>
    </nav>
}