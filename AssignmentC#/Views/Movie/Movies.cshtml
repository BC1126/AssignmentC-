@model List<Movie>
@{
    ViewData["Title"] = "Movie Management";
}

<div class="container-xl pt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a href="/Movie/UpsertMovie" class="btn btn-primary">
            <i class="fa fa-plus"></i> Add New Movie
        </a>
    </div>

    @* Display TempData messages (Success or Error) *@
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success" role="alert">@TempData["Info"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">@TempData["Error"]</div>
    }

    @* --- NEW: Check if the movie list is empty --- *@
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-secondary text-center mt-5 p-4">
            <h4>No Movies Found!</h4>
            <p>There are currently no movies in the database. Use the button above to start adding new movie listings.</p>
        </div>
    }
    else
    {
        @* --- Original Table Code (Only displays if movies exist) --- *@
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Duration</th>
                    <th>Rating</th>
                    <th>Premier Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            <img src="/uploads/@movie.PosterUrl" alt="@movie.Title Poster" style="width: 50px; height: 75px; object-fit: cover;" />
                        </td>
                        <td>@movie.Title</td>
                        <td>@movie.Genre</td>
                        <td>@movie.DurationMinutes min</td>
                        <td>@movie.Rating</td>
                        <td>@movie.PremierDate.ToString("dd MMM yyyy")</td>
                        <td>
                            <a asp-controller="Movie" asp-action="UpsertMovie" asp-route-id="@movie.MovieId" class="btn btn-sm btn-info text-white">Edit</a>

                            <form asp-controller="Movie" asp-action="DeleteMovie" method="post" asp-route-id="@movie.MovieId" style="display: inline;"
                                  onsubmit="return confirm('Are you sure you want to delete the movie: @movie.Title? This action cannot be undone.');">
                                
                                @Html.AntiForgeryToken()
                                <a asp-action="Delete"
                                   asp-route-id="@movie.MovieId"
                                   class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>