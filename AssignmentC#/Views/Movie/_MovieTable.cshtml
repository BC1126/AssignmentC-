@model MovieListVM

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Poster</th>
            @* Ensure all sorting links include the current search term 'name' *@
            <th>
                <a data-ajax="true" data-ajax-update="#movieTableTarget" data-ajax-loading="#loader"
                   href="@Url.Action("Movies", new { name = Model.SearchName, sort = "Title", dir = Model.Sort == "Title" && Model.Dir == "asc" ? "des" : "asc" })">
                    Title @(Model.Sort == "Title" ? (Model.Dir == "asc" ? "▲" : "▼") : "")
                </a>
            </th>
            <th>
                <a data-ajax="true" data-ajax-update="#movieTableTarget" data-ajax-loading="#loader"
                   href="@Url.Action("Movies", new { name = Model.SearchName, sort = "Genre", dir = Model.Sort == "Genre" && Model.Dir == "asc" ? "des" : "asc" })">
                    Genre @(Model.Sort == "Genre" ? (Model.Dir == "asc" ? "▲" : "▼") : "")
                </a>
            </th>
            <th>
                <a data-ajax="true" data-ajax-update="#movieTableTarget" data-ajax-loading="#loader"
                   href="@Url.Action("Movies", new { name = Model.SearchName, sort = "Duration", dir = Model.Sort == "Duration" && Model.Dir == "asc" ? "des" : "asc" })">
                    Duration @(Model.Sort == "Duration" ? (Model.Dir == "asc" ? "▲" : "▼") : "")
                </a>
            </th>
            <th>
                <a data-ajax="true" data-ajax-update="#movieTableTarget" data-ajax-loading="#loader"
                   href="@Url.Action("Movies", new { name = Model.SearchName, sort = "Rating", dir = Model.Sort == "Rating" && Model.Dir == "asc" ? "des" : "asc" })">
                    Rating @(Model.Sort == "Rating" ? (Model.Dir == "asc" ? "▲" : "▼") : "")
                </a>
            </th>
            <th>
                <a data-ajax="true" data-ajax-update="#movieTableTarget" data-ajax-loading="#loader"
                   href="@Url.Action("Movies", new { name = Model.SearchName, sort = "PremierDate", dir = Model.Sort == "PremierDate" && Model.Dir == "asc" ? "des" : "asc" })">
                    Premier Date @(Model.Sort == "PremierDate" ? (Model.Dir == "asc" ? "▲" : "▼") : "")
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td><img src="/uploads/@movie.PosterUrl" style="width: 50px; height: 75px; object-fit: cover;" /></td>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.DurationMinutes min</td>
                <td>@movie.Rating</td>
                <td>@movie.PremierDate.ToString("dd MMM yyyy")</td>
                <td>
                    <a asp-action="UpsertMovie" asp-route-id="@movie.MovieId" class="btn btn-sm btn-info text-white">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" data-ajax="true" data-ajax-update="#movieTableTarget" data-ajax-loading="#loader"
                   href="@Url.Action("Movies", new { name = Model.SearchName, sort = Model.Sort, dir = Model.Dir, page = i })">@i</a>
            </li>
        }
    </ul>
</nav>