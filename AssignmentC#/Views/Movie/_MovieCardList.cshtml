@model List<Movie>

<div class="row gx-5 gy-5 justify-content-center">
    @foreach (var movie in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 d-flex justify-content-center">

            <div class="card shadow-sm border-0" style="width:270px;">

                <img src="~/uploads/@movie.PosterUrl"
                     style="width:270px; height:390px; object-fit:cover;"
                     class="card-img-top" />

                <div class="card-body text-center">
                    <h6 class="fw-bold text-truncate">@movie.Title</h6>

                    <a asp-action="Details"
                       asp-route-id="@movie.MovieId"
                       class="btn btn-outline-primary btn-sm mt-2">
                        Get Ticket
                    </a>
                </div>

            </div>

        </div>
    }
</div>
