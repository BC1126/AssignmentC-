@model AssignmentC_.Models.Movie

<div class="container py-5">
    <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-danger mb-3">Delete Movie</h3>

        <!-- Poster -->
        @if (!string.IsNullOrEmpty(Model.PosterUrl))
        {
            <div class="text-center mb-3">
                <img src="/uploads/@Model.PosterUrl"
                     alt="@Model.Title"
                     class="img-thumbnail"
                     style="max-width: 200px;" />
            </div>
        }

        <p>Are you sure you want to delete this movie?</p>

        <div class="mb-3 text-center">
            <strong>@Model.Title</strong><br />
            <small>@Model.Genre | @Model.DurationMinutes mins</small>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="movieId" value="@Model.MovieId" />

            <button type="submit" class="btn btn-danger">
                Yes, Delete
            </button>
            <a asp-action="Movies" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>
</div>
