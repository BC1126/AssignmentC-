@model Movie

<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <img src="~/uploads/@Model.PosterUrl"
                 class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-8">
            <h3 class="fw-bold">@Model.Title</h3>

            <p class="text-muted">
                @Model.Genre • @Model.DurationMinutes mins • @Model.Rating
            </p>

            <p>@Model.Description</p>

            <hr />

            <div class="alert alert-info">
                Showtime & seat selection will be added here.
            </div>
        </div>
    </div>
</div>
