@model MovieListVM

<div class="container my-5">
    <h3 class="mb-4">Now Showing</h3>

    @if (!Model.Movies.Any())
    {
        <div class="alert alert-info">No movies showing now.</div>
    }
    else
    {
        <div class="row g-4" id="movieContainer">
            @foreach (var movie in Model.Movies)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="~/uploads/@movie.PosterUrl"
                             class="card-img-top"
                             style="height:390px; max-width:270px; object-fit:cover;" />
                        <div class="card-body text-center">
                            <h6 class="fw-bold">@movie.Title</h6>
                            <a asp-action="Details"
                               asp-route-id="@movie.MovieId"
                               class="btn btn-outline-primary btn-sm mt-2">
                                Get Ticket
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
