@model HallViewModel
@{
    ViewData["Title"] = "Manage Hall Seats - " + Model.Name;
}
@section head {
    <link rel="stylesheet" asp-append-version="true" href="~/css/ManageSeat.css" />
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Manage Seats: @Model.Name</h2>
            <p class="text-muted">@Model.OutletName | Current Capacity: @Model.Capacity seats</p>
        </div>
        <a asp-controller="Hall" asp-action="ManageHalls" class="btn btn-secondary">
            ← Back to Halls
        </a>
    </div>

    

    <!-- Seat Legend -->
    <ul class="legend">
        <li><span class="seat-legend standard"></span> Standard</li>
        <li><span class="seat-legend vip"></span> VIP</li>
        <li><span class="seat-legend wheelchair"></span> Wheelchair</li>
        <li><span class="seat-legend disabled"></span> Disabled</li>
        <li><span class="seat-legend selected"></span> Selected</li>
    </ul>

    <!-- Screen -->
    <div class="screen">SCREEN</div>

    <!-- Seat Grid -->
    <div id="seat-map">
        @{
            var groupedSeats = Model.Seats.GroupBy(s => s.Row).OrderBy(g => g.Key);
        }
        @foreach (var rowGroup in groupedSeats)
        {
            <div class="seat-row">
                <span class="row-label">@rowGroup.Key</span>
                @foreach (var seat in rowGroup.OrderBy(s => s.Column))
                {
                    var seatClass = "seat";
                    if (seat.IsPremium) seatClass += " vip";
                    else if (seat.IsWheelchair) seatClass += " wheelchair";
                    else seatClass += " standard";

                    if (!seat.IsActive) seatClass += " disabled";

                    <div class="@seatClass"
                         data-seat-id="@seat.SeatId"
                         data-identifier="@seat.SeatIdentifier"
                         data-premium="@seat.IsPremium.ToString().ToLower()"
                         data-wheelchair="@seat.IsWheelchair.ToString().ToLower()"
                         data-active="@seat.IsActive.ToString().ToLower()">
                        @seat.SeatIdentifier
                    </div>
                }
            </div>
        }
    </div>

    <!-- Seat Tools (SEPARATE FORM) -->
    <div class="tools card p-3 mt-4">
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info mb-0">
                    <strong>💡 Multi-Select Mode:</strong> Click seats to add/remove from selection. Selected: <strong><span id="selectedCount">0</span></strong> seat(s)
                </div>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-md-3">
                <label class="form-label" for="seatType">Change Seat Type:</label>
                <select id="seatType" name="seatType" class="form-select" aria-label="Select seat type">
                    <option value="">-- Select Type --</option>
                    <option value="standard">Standard</option>
                    <option value="vip">VIP</option>
                    <option value="wheelchair">Wheelchair</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Apply Type:</label>
                <button type="button" id="applyType" class="btn btn-primary w-100" disabled>
                    Apply Type
                </button>
            </div>
            <div class="col-md-3">
                <label class="form-label">Seat Status:</label>
                <div class="btn-group w-100" role="group" aria-label="Seat status controls">
                    <button type="button" id="disableSeat" class="btn btn-danger" disabled>Disable</button>
                    <button type="button" id="enableSeat" class="btn btn-success" disabled>Enable</button>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label">Selection:</label>
                <button type="button" id="clearSelection" class="btn btn-outline-secondary w-100">
                    Clear Selection
                </button>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="button" id="saveLayout" class="btn btn-primary w-100">
                    💾 Save Layout
                </button>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <div class="btn-group w-100" role="group" aria-label="Selection tools">
                    <button type="button" id="selectRow" class="btn btn-outline-primary">Select Row</button>
                    <button type="button" id="selectColumn" class="btn btn-outline-primary">Select Column</button>
                    <button type="button" id="selectAll" class="btn btn-outline-primary">Select All</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tools card p-3 mt-4" style="width:1100px !important;text-align:center !important;margin:auto !important;">
    <div class="card-header bg-warning mb-3">
        <h5 class="mb-0 text-dark">Adjust Seat Capacity</h5>
    </div>

    <div class="card-body p-0">
        <form asp-controller="Hall"
              asp-action="RegenerateSeats"
              method="post"
              id="capacityForm">

            @Html.AntiForgeryToken()
            <input type="hidden" name="HallId" value="@Model.HallId" id="hallIdInput" />

            <div class="row align-items-end">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Number of Rows (A, B, C...)</label>
                    <input type="number"
                           name="Rows"
                           id="rowsInput"
                           class="form-control"
                           min="1"
                           max="26"
                           value="@(Model.Seats.Any() ? Model.Seats.Max(s => s.Row[0]) - 'A' + 1 : 5)"
                           required />
                    <small class="text-muted">Current: @(Model.Seats.Any() ? (Model.Seats.Max(s => s.Row[0]) - 'A' + 1).ToString() : "0") rows</small>
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">Seats Per Row (1, 2, 3...)</label>
                    <input type="number"
                           name="SeatsPerRow"
                           id="seatsInput"
                           class="form-control"
                           min="1"
                           max="50"
                           value="@(Model.Seats.Any() ? Model.Seats.Max(s => s.Column) : 10)"
                           required />
                    <small class="text-muted">Current: @(Model.Seats.Any() ? Model.Seats.Max(s => s.Column).ToString() : "0") seats</small>
                </div>
                <br />
                <div class="col-md-4 mb-3">
                    <button type="submit" class="btn btn-warning w-100 py-2" id="regenerateBtn">
                        🔄 Regenerate Layout
                    </button>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-12">
                    <div class="alert alert-warning mb-0 py-2 small">
                        <strong>⚠️ Notice:</strong> Regenerating will delete all custom VIP/Wheelchair settings.
                        <strong>New Total:</strong> <span id="newCapacityDisplay" class="fw-bold">0</span> seats.
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        // Calculate new capacity dynamically
        const rowsInput = document.querySelector('input[name="Rows"]');
        const seatsInput = document.querySelector('input[name="SeatsPerRow"]');
        const capacityDisplay = document.getElementById('newCapacityDisplay');

        function updateCapacity() {
            const rows = parseInt(rowsInput.value) || 0;
            const seats = parseInt(seatsInput.value) || 0;
            const newCapacity = rows * seats;
            capacityDisplay.textContent = newCapacity;
        }

        rowsInput.addEventListener('input', updateCapacity);
        seatsInput.addEventListener('input', updateCapacity);
        updateCapacity(); // Initial calculation

        // Confirm before regenerating
        document.getElementById('capacityForm').addEventListener('submit', function(e) {
            const rows = parseInt(rowsInput.value) || 0;
            const seats = parseInt(seatsInput.value) || 0;
            const newCapacity = rows * seats;

            if (!confirm(`⚠️ WARNING!\n\nThis will DELETE all ${@Model.Capacity} current seats and create ${newCapacity} new seats.\n\nAll VIP, Wheelchair, and custom configurations will be LOST!\n\nAre you absolutely sure you want to continue?`)) {
                e.preventDefault();
            }
        });
    </script>

    <script>
        const saveUrl = '@Url.Action("SaveAllSeats", "Hall")';
        const manageHallsUrl = '@Url.Action("ManageHalls", "Hall")';
        let selectedSeats = new Set();

        function updateSelectedCount() {
            document.getElementById('selectedCount').textContent = selectedSeats.size;
            const hasSelection = selectedSeats.size > 0;
            document.getElementById('applyType').disabled = !hasSelection;
            document.getElementById('disableSeat').disabled = !hasSelection;
            document.getElementById('enableSeat').disabled = !hasSelection;
        }

        function toggleSeatSelection(seat) {
            if (seat.classList.contains('selected')) {
                seat.classList.remove('selected');
                selectedSeats.delete(seat);
            } else {
                seat.classList.add('selected');
                selectedSeats.add(seat);
            }
            updateSelectedCount();
        }

        // Seat selection
        document.querySelectorAll('.seat').forEach(seat => {
            seat.addEventListener('click', function() {
                toggleSeatSelection(this);

                if (selectedSeats.size === 1) {
                    const singleSeat = Array.from(selectedSeats)[0];
                    if (singleSeat.classList.contains('vip')) {
                        document.getElementById('seatType').value = 'vip';
                    } else if (singleSeat.classList.contains('wheelchair')) {
                        document.getElementById('seatType').value = 'wheelchair';
                    } else {
                        document.getElementById('seatType').value = 'standard';
                    }
                } else {
                    document.getElementById('seatType').value = '';
                }
            });
        });

        // Apply seat type
        document.getElementById('applyType').addEventListener('click', function() {
            const seatType = document.getElementById('seatType').value;
            if (!seatType || selectedSeats.size === 0) {
                alert('Please select seats and a seat type');
                return;
            }

            let changedCount = 0;
            selectedSeats.forEach(seat => {
                if (seat.classList.contains('disabled')) return;
                seat.classList.remove('standard', 'vip', 'wheelchair');
                seat.classList.add(seatType);
                seat.dataset.premium = (seatType === 'vip') ? 'true' : 'false';
                seat.dataset.wheelchair = (seatType === 'wheelchair') ? 'true' : 'false';
                changedCount++;
            });

            alert(`Changed ${changedCount} seat(s) to ${seatType}`);
            selectedSeats.forEach(s => s.classList.remove('selected'));
            selectedSeats.clear();
            document.getElementById('seatType').value = '';
            updateSelectedCount();
        });

        // Disable/Enable seats
        document.getElementById('disableSeat').addEventListener('click', () => {
            if (selectedSeats.size === 0) return;
            selectedSeats.forEach(seat => {
                seat.classList.add('disabled');
                seat.dataset.active = 'false';
            });
            alert(`Disabled ${selectedSeats.size} seat(s)`);
            selectedSeats.forEach(s => s.classList.remove('selected'));
            selectedSeats.clear();
            updateSelectedCount();
        });

        document.getElementById('enableSeat').addEventListener('click', () => {
            if (selectedSeats.size === 0) return;
            selectedSeats.forEach(seat => {
                seat.classList.remove('disabled');
                seat.dataset.active = 'true';
            });
            alert(`Enabled ${selectedSeats.size} seat(s)`);
            selectedSeats.forEach(s => s.classList.remove('selected'));
            selectedSeats.clear();
            updateSelectedCount();
        });

        // Clear selection
        document.getElementById('clearSelection').addEventListener('click', () => {
            selectedSeats.forEach(s => s.classList.remove('selected'));
            selectedSeats.clear();
            document.getElementById('seatType').value = '';
            updateSelectedCount();
        });

        // Select row
        document.getElementById('selectRow').addEventListener('click', () => {
            const rowLabel = prompt('Enter row letter (e.g., A, B, C):');
            if (!rowLabel) return;
            const row = rowLabel.toUpperCase();
            let count = 0;
            document.querySelectorAll('.seat').forEach(seat => {
                const identifier = seat.dataset.identifier;
                if (identifier && identifier.startsWith(row)) {
                    if (!seat.classList.contains('selected')) {
                        seat.classList.add('selected');
                        selectedSeats.add(seat);
                        count++;
                    }
                }
            });
            updateSelectedCount();
            alert(count === 0 ? `No seats found in row ${row}` : `Selected ${count} seat(s) in row ${row}`);
        });

        // Select column
        document.getElementById('selectColumn').addEventListener('click', () => {
            const columnNum = prompt('Enter column number (e.g., 1, 2, 3):');
            if (!columnNum) return;
            let count = 0;
            document.querySelectorAll('.seat').forEach(seat => {
                const identifier = seat.dataset.identifier;
                const seatColumn = identifier.replace(/[A-Z]/g, '');
                if (seatColumn === columnNum) {
                    if (!seat.classList.contains('selected')) {
                        seat.classList.add('selected');
                        selectedSeats.add(seat);
                        count++;
                    }
                }
            });
            updateSelectedCount();
            alert(count === 0 ? `No seats found in column ${columnNum}` : `Selected ${count} seat(s) in column ${columnNum}`);
        });

        // Select all
        document.getElementById('selectAll').addEventListener('click', () => {
            document.querySelectorAll('.seat').forEach(seat => {
                if (!seat.classList.contains('selected')) {
                    seat.classList.add('selected');
                    selectedSeats.add(seat);
                }
            });
            updateSelectedCount();
            alert(`Selected all ${selectedSeats.size} seats`);
        });

        // Save layout
        document.getElementById('saveLayout').addEventListener('click', async () => {
            const seats = [];
            document.querySelectorAll('.seat').forEach(seat => {
                const seatId = parseInt(seat.dataset.seatId);
                if (!seatId || isNaN(seatId)) return;
                seats.push({
                    seatId: seatId,
                    isPremium: seat.dataset.premium === 'true',
                    isWheelchair: seat.dataset.wheelchair === 'true',
                    isActive: seat.dataset.active === 'true'
                });
            });

            if (seats.length === 0) {
                alert('No seats found to save!');
                return;
            }

            if (!confirm(`Save layout for ${seats.length} seats?`)) {
                return;
            }

            try {
                const response = await fetch(saveUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(seats)
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                if (result.success) {
                    alert('Seat layout saved successfully!');
                    window.location.href = manageHallsUrl;
                } else {
                    alert('Error saving seat layout: ' + (result.message || 'Unknown error'));
                }
            } catch (error) {
                alert('Error saving seat layout: ' + error.message);
            }
        });

        updateSelectedCount();
    </script>
}