@model List<HallViewModel>
@{
    ViewData["Title"] = "Manage Halls";
}
@section head {
    <link rel="stylesheet" href="~/css/ManageHall.css" />
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Halls</h2>
        <a asp-controller="Hall" asp-action="AddHall" class="btn btn-primary">➕ Add New Hall</a>
    </div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h4>No halls found</h4>
            <p>Click "Add New Hall" to create your first hall.</p>
        </div>
    }
    else
    {
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Hall Name</th>
                    <th>Outlet</th>
                    <th>Capacity</th>
                    <th>Total Seats</th>
                    <th>Premium Seats</th>
                    <th>Status</th>
                    <th style="width: 250px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hall in Model)
                {
                    <tr>
                        <td>
                            <strong>@hall.Name</strong>
                            @if (!string.IsNullOrEmpty(hall.HallType))
                            {
                                <br>
                    
                                <small class="text-muted">@hall.HallType</small>
                            }
                        </td>
                        <td>@hall.OutletName</td>
                        <td>@hall.Capacity</td>
                        <td>@hall.TotalSeats</td>
                        <td>
                            @if (hall.PremiumSeats > 0)
                            {
                                <span class="badge bg-warning text-dark">@hall.PremiumSeats VIP</span>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td>
                            @if (hall.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="Hall"
                               asp-action="EditHall"
                               asp-route-id="@hall.HallId"
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>
                            <a asp-controller="Hall"
                               asp-action="EditHallSeats"
                               asp-route-id="@hall.HallId"
                               class="btn btn-sm btn-info">
                                Seats
                            </a>
                            @if (hall.IsActive)
                            {
                                <button onclick="toggleHallStatus(@hall.HallId, false)"
                                        class="btn btn-sm btn-danger">
                                    Disable
                                </button>
                            }
                            else
                            {
                                <button onclick="toggleHallStatus(@hall.HallId, true)"
                                        class="btn btn-sm btn-success">
                                    Enable
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <p class="text-muted">
                Total Halls: <strong>@Model.Count</strong> |
                Active: <strong>@Model.Count(h => h.IsActive)</strong> |
                Inactive: <strong>@Model.Count(h => !h.IsActive)</strong>
            </p>
        </div>
    }
</div>

@section foot {
    <script>
        async function toggleHallStatus(hallId, enable) {
            const action = enable ? 'enable' : 'disable';
            if (!confirm(`Are you sure you want to ${action} this hall?`)) {
                return;
            }

            try {
                const response = await fetch(`/Hall/ToggleHallStatus/${hallId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {
                    location.reload();
                } else {
                    alert('Error toggling hall status');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error toggling hall status');
            }
        }
    </script>
}