@model List<HallViewModel>
@{
    ViewData["Title"] = "Manage Halls";
}
@section head {
    <link rel="stylesheet" href="~/css/ManageHall.css" />
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Halls</h2>
        <a asp-controller="Hall" asp-action="AddHall" class="btn btn-primary">➕ Add New Hall</a>
    </div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h4>No halls found</h4>
            <p>Click "Add New Hall" to create your first hall.</p>
        </div>
    }
    else
    {
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Hall Name</th>
                    <th>Outlet</th>
                    <th>Capacity</th>
                    <th>Total Seats</th>
                    <th>Premium Seats</th>
                    <th>Status</th>
                    <th style="width: 250px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hall in Model)
                {
                    <tr>
                        <td>
                            <strong>@hall.Name</strong>
                            @if (!string.IsNullOrEmpty(hall.HallType))
                            {
                                <br>
                    
                                <small class="text-muted">@hall.HallType</small>
                            }
                        </td>
                        <td>@hall.OutletName</td>
                        <td>@hall.Capacity</td>
                        <td>@hall.TotalSeats</td>
                        <td>
                            @if (hall.PremiumSeats > 0)
                            {
                                <span class="badge bg-warning text-dark">@hall.PremiumSeats VIP</span>
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                        <td id="status-badge-container-@hall.HallId">
                            @if (hall.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>

                        <td id="action-buttons-@hall.HallId">
                            <a asp-controller="Hall" asp-action="EditHall" asp-route-id="@hall.HallId" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-controller="Hall" asp-action="DeleteHall" asp-route-id="@hall.HallId"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to PERMANENTLY delete this hall? This will remove all associated seats.');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                            @if (hall.IsActive)
                            {
                                <button onclick="toggleHallStatus(@hall.HallId, false)" class="btn btn-sm btn-danger">Disable</button>
                            }
                            else
                            {
                                <button onclick="toggleHallStatus(@hall.HallId, true)" class="btn btn-sm btn-success">Enable</button>
                            }
                        </td>


                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <p class="text-muted">
                Total Halls: <strong>@Model.Count</strong> |
                Active: <strong>@Model.Count(h => h.IsActive)</strong> |
                Inactive: <strong>@Model.Count(h => !h.IsActive)</strong>
            </p>
        </div>
    }
</div>

@section foot {
    <script>
        async function toggleHallStatus(hallId, enable) {
            const action = enable ? 'enable' : 'disable';
            if (!confirm(`Are you sure you want to ${action} this hall?`)) return;

            try {
                const response = await fetch(`/Hall/ToggleHallStatus/${hallId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });
                const result = await response.json();
                if (result.success) {
                    const badgeContainer = document.getElementById(`status-badge-container-${hallId}`);
                    badgeContainer.innerHTML = result.isActive
                        ? '<span class="badge bg-success">Active</span>'
                        : '<span class="badge bg-secondary">Inactive</span>';

                        const actionContainer = document.getElementById(`action-buttons-${hallId}`);
                        const editBtn = `<a href="/Hall/EditHall/${hallId}" class="btn btn-sm btn-warning">Edit</a> `;
                        const toggleBtn = result.isActive
                            ? `<button onclick="toggleHallStatus(${hallId}, false)" class="btn btn-sm btn-danger">Disable</button> `
                            : `<button onclick="toggleHallStatus(${hallId}, true)" class="btn btn-sm btn-success">Enable</button> `;
                        const deleteForm = `
                            <form action="/Hall/DeleteHall/${hallId}" method="post" class="d-inline" onsubmit="return confirm('Delete permanently?');">
                                <input name="__RequestVerificationToken" type="hidden" value="${document.querySelector('input[name="__RequestVerificationToken"]').value}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>`;

                        actionContainer.innerHTML = editBtn + deleteForm + toggleBtn ;
                } else {
                    alert(result.message || 'Error toggling hall status');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('A network error occurred.');
            }
        }
    </script>
}