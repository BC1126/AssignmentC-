@model AssignmentC_.Models.MovieViewModel
@{
    ViewData["Title"] = Model.MovieId == 0 ? "Add Movie" : "Edit Movie";
}

<div class="container-xl py-5">
    <div class="card shadow-sm p-4 mx-auto" style="max-width: 900px; background-color: #fff;">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        <!-- Top model errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- TempData messages -->
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-success">@TempData["Info"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="UpsertMovie" method="post" enctype="multipart/form-data" id="movieForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MovieId" />

            <div class="row g-4">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Genre" class="form-label"></label>
                        <input asp-for="Genre" class="form-control" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DurationMinutes" class="form-label"></label>
                        <input asp-for="DurationMinutes" type="number" class="form-control" />
                        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Director" class="form-label"></label>
                        <input asp-for="Director" class="form-control" />
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Writer" class="form-label"></label>
                        <input asp-for="Writer" class="form-control" />
                        <span asp-validation-for="Writer" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PremierDate" class="form-label"></label>
                        <input asp-for="PremierDate" type="date" class="form-control" />
                        <span asp-validation-for="PremierDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrailerUrl" class="form-label"></label>
                        <input asp-for="TrailerUrl" class="form-control" />
                        <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <!-- Poster + Banner Upload -->
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="form-label">Poster</label>
                    <input asp-for="PosterFile" type="file" class="form-control" id="posterInput" accept="image/*" />
                    <img id="posterPreview" class="img-thumbnail mt-2" style="display:none; max-width:200px;" />
                         @if (!string.IsNullOrEmpty(Model.PosterUrl))
                    {
                        <div class="mt-2">
                            <img src="/uploads/@Model.PosterUrl" width="200" class="img-thumbnail" />
                        </div>
                    }
                    <span asp-validation-for="PosterFile" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Banner</label>
                    <input asp-for="BannerFile" type="file" class="form-control" id="bannerInput" accept="image/*" />
                    <img id="bannerPreview" class="img-thumbnail mt-2" style="display:none; max-width:300px;" />
                         @if (!string.IsNullOrEmpty(Model.BannerUrl))
                    {
                        <div class="mt-2">
                            <img src="/uploads/@Model.BannerUrl" width="300" class="img-thumbnail" />
                        </div>
                    }
                    <span asp-validation-for="BannerFile" class="text-danger"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Movies" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/app.js"></script>
}
