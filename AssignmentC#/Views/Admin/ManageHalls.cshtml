@{
    ViewData["Title"] = "Manage Halls";
}
@section head {
    <link rel="stylesheet" href="~/css/ManageHall.css" />
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Manage Halls</h2>
        <a href="/Admin/AddHall" class="btn btn-primary">➕ Add New Hall</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Hall Name</th>
                <th>Outlet</th>
                <th>Capacity</th>
                <th>Status</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample Data -->
            <tr>
                <td>Hall 1</td>
                <td>Mid Valley</td>
                <td>120</td>
                <td>
                    <span class="badge bg-success">Active</span>
                </td>
                <td>
                    <a href="/Admin/EditHall/1" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Admin/EditHallSeats/1" class="btn btn-sm btn-info">Seats</a>
                    <button class="btn btn-sm btn-danger">Disable</button>
                </td>
            </tr>

            <tr>
                <td>IMAX Hall</td>
                <td>Sunway Pyramid</td>
                <td>180</td>
                <td>
                    <span class="badge bg-secondary">Inactive</span>
                </td>
                <td>
                    <a href="/Admin/EditHall/2" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Admin/EditHallSeats/2" class="btn btn-sm btn-info">Seats</a>
                    <button class="btn btn-sm btn-success">Enable</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
