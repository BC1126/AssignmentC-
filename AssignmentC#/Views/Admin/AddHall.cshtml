@{
    ViewData["Title"] = "Add New Hall";
}
@section head {
    <link rel="stylesheet" href="~/css/ManageHall.css" />
}

<div class="container mt-4">
    <h2>Add New Hall</h2>

    <form class="mt-4">
        <div class="mb-3">
            <label class="form-label">Hall Name</label>
            <input type="text" class="form-control" placeholder="e.g. Hall 1 / IMAX Hall">
        </div>

        <div class="mb-3">
            <label class="form-label">Outlet</label>
            <select class="form-select">
                <option selected disabled>-- Select Outlet --</option>
                <option>Mid Valley</option>
                <option>Sunway Pyramid</option>
                <option>Pavilion KL</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Seat Layout</label>
            <div class="row">
                <div class="col">
                    <input type="number" class="form-control" placeholder="Rows (e.g. 10)">
                </div>
                <div class="col">
                    <input type="number" class="form-control" placeholder="Seats per row (e.g. 12)">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Default Pricing</label>
            <div class="row">
                <div class="col">
                    <input type="number" class="form-control" placeholder="Standard (RM)">
                </div>
                <div class="col">
                    <input type="number" class="form-control" placeholder="VIP (RM)">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Hall Type</label>
            <select class="form-select">
                <option>Standard</option>
                <option>IMAX</option>
                <option>4DX</option>
                <option>Luxury</option>
            </select>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label">Enable Hall</label>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">Create Hall</button>
            <a href="/Admin/ManageHalls" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
