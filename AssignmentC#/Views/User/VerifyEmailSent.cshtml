@{
    ViewData["Title"] = "Check Your Email";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5 mx-auto" style="max-width: 500px;">
        <i class="bi bi-envelope-check text-success display-1 mb-3"></i>
        <h2 class="mb-3">Check Your Email</h2>
        <p class="text-muted">
            We have sent a verification link to your email address.
        </p>
        <a asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
    </div>
</div>