@model AddStaffVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Add New Staff</h2>

            <form asp-action="AdminAddStaff" asp-controller="Admin" method="post" class="border p-4 rounded shadow-sm bg-light">
                @* Summary for database or general errors *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Staff ID (Auto-generated)</label>
                    <input asp-for="UserId" class="form-control bg-light" readonly placeholder="SXXXX" />
                    <small class="text-muted">The system will assign the next available ID.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="example@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Gender" class="form-label fw-bold"></label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">-- Select Gender --</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="Phone" class="form-control" placeholder="01XXXXXXXX" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mt-4 pt-3 border-top">
                    <button type="submit" class="btn btn-success px-4">Create Staff</button>
                    <a asp-action="StaffList" asp-controller="User" class="btn btn-secondary px-4 ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>