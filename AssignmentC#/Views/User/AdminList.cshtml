@model IEnumerable<Admin>

@{
    ViewBag.Title = "Admin | AdminList";
}

@section head {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
        /* Consistent container styling for all list views */
        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
}

@* Everything is wrapped in this container for consistent side spacing *@
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>

        @* Category Navigation *@
        <div class="btn-group" role="group" aria-label="User Categories">
            <a asp-action="MemberList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "MemberList" ? "active" : "")">
                All Members
            </a>
            <a asp-action="StaffList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "StaffList" ? "active" : "")">
                Staff Only
            </a>
            <a asp-action="AdminList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "AdminList" ? "active" : "")">
                Admins Only
            </a>
        </div>
    </div>

    @* Admin list usually doesn't have an "Add" button for security, 
       but if it did, it would go here to match the others. *@

    @if (Model != null)
    {
        <div class="table-container border">
            <p class="text-muted">Showing @Model.Count() admin record(s)</p>

            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td><strong>@u.UserId</strong></td>
                                <td>@u.Name</td>
                                <td>@u.Gender</td>
                                <td>@u.Email</td>
                                <td>@u.Phone</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning shadow-sm">No admin data available or an error occurred loading the data.</div>
    }
</div>