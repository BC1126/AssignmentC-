@model PaginatedList<Admin>

@{
    ViewBag.Title = "Admin | AdminList";
}

@section head {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }

        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            position: relative;
            transition: opacity 0.3s ease;
        }
    </style>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>

        <div class="btn-group" role="group">
            <a asp-action="MemberList" asp-controller="User" class="btn btn-outline-primary">All Members</a>
            <a asp-action="StaffList" asp-controller="User" class="btn btn-outline-primary">Staff Only</a>
            <a asp-action="AdminList" asp-controller="User" class="btn btn-outline-primary active">Admins Only</a>
        </div>
    </div>

    @* Smooth Search Bar *@
    <div class="row mb-3">
        <div class="col-md-4">
            <h6 class="fw-bold">Search Admins</h6>
            <input type="text" id="searchInput" class="form-control shadow-sm" placeholder="Search by name or email..." value="@Model.SearchString" />
        </div>
    </div>

    <div id="tableContainer">
        <partial name="_AdminList" model="Model" />
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let currentSort = "@Model.SortOrder";

            function loadData(page, sort, search) {
                $('#tableContainer').css('opacity', '0.5');

                $.ajax({
                    url: '@Url.Action("AdminList", "User")',
                    type: 'GET',
                    data: { pageNumber: page, sortOrder: sort, searchString: search },
                    headers: { "X-Requested-With": "XMLHttpRequest" },
                    success: function (result) {
                        $('#tableContainer').html(result).css('opacity', '1');
                    }
                });
            }

            let typingTimer;
            $('#searchInput').on('input', function () {
                clearTimeout(typingTimer);
                typingTimer = setTimeout(() => {
                    loadData(1, currentSort, $(this).val());
                }, 300);
            });

            $(document).on('click', '.page-link, .sort-link', function (e) {
                e.preventDefault();
                let page = $(this).data('page') || 1;
                let sort = $(this).data('sort') || currentSort;
                if ($(this).hasClass('sort-link')) currentSort = sort;

                loadData(page, currentSort, $('#searchInput').val());
            });
        });
    </script>
}