@model ResetPasswordVM

<section id="login" class="p_3">
    <div class="container-xl">
        <div class="row login_1 justify-content-center">
            <div class="col-md-12">
                <form asp-action="ResetPassword" method="post">
                    <div class="login_1m p-5 px-4 w-50 mx-auto bg-light shadow-sm">
                        <h2 class="text-center mb-4 fw-bold">Set New Password</h2>

                        @* Crucial: Hidden field to send the token back to the POST action *@
                        <input type="hidden" asp-for="Token" />

                        <div class="form-group mb-3">
                            <h6 class="mb-2 fw-bold">New Password</h6>
                            <input asp-for="New" class="form-control" type="password" required />
                            <span asp-validation-for="New" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <h6 class="mb-2 fw-bold mt-4">Confirm New Password</h6>
                            <input asp-for="Confirm" class="form-control" type="password" required />
                            <span asp-validation-for="Confirm" class="text-danger small"></span>
                        </div>

                        <div class="mt-4">
                            <h6 class="mt-3 center_sm">
                                <button type="submit" class="button d-block text-center w-100">UPDATE PASSWORD</button>
                            </h6>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>