@{
    ViewBag.Title = "Recovery | Forgot Password";
}

@* Optional: Use the same section title header if you want the black/white banner at the top *@

<section id="login" class="p_3">
    <div class="container-xl">
        <div class="row login_1 justify-content-center">
            <div class="col-md-12">
                <form asp-controller="User" asp-action="ForgotPassword" method="post">
                    @* w-50 mx-auto matches the width of your Register/Login forms *@
                    <div class="login_1m p-5 px-4 w-50 mx-auto bg-light shadow-sm">

                        <h2 class="text-center mb-4 fw-bold">Forgot Password</h2>
                        <p class="text-muted text-center mb-4">Enter your email and we'll send you a link to reset your password.</p>

                        @* Using h6 for consistent font weight/size as seen in your Register page *@
                        <h6 class="mb-3 fw-bold mt-4">Email Address</h6>
                        <input type="email" name="email" class="form-control"
                               placeholder="example@mail.com" required />

                        <div class="mt-4">
                            @* Use the "button" class for the orange/blue theme styling *@
                            <h6 class="mt-3 center_sm">
                                <button type="submit" class="button d-block text-center w-100">SEND RESET LINK</button>
                            </h6>
                        </div>

                        <div class="mt-4 text-center">
                            <p class="mb-0">
                                Remembered your password?
                                <a asp-controller="User" asp-action="Login" class="fw-bold rol_oran">Login</a>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>