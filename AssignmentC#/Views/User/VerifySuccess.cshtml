@{
    ViewData["Title"] = "Verification Successful";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card shadow p-5 text-center border-0" style="max-width: 500px; width: 100%;">

        <div class="mb-4">
            <div class="rounded-circle bg-success d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                <i class="bi bi-check-lg text-white" style="font-size: 3rem;"></i>
            </div>
        </div>

        <h2 class="mb-3 fw-bold text-success">Verified!</h2>

        <p class="text-muted mb-4 fs-5">
            Your email has been successfully confirmed.<br>
            You can now log in to your account.
        </p>

        <p class="small text-secondary mb-4">
            Redirecting to login in <span id="countdown" class="fw-bold text-dark">5</span> seconds...
        </p>

        <div class="d-grid gap-2">
            <a asp-controller="User" asp-action="Login" class="btn btn-primary btn-lg">
                Go to Login Now
            </a>
        </div>
    </div>
</div>

<script>
    // Auto-redirect script
    let seconds = 5;
    const countdownEl = document.getElementById('countdown');

    const timer = setInterval(function() {
        seconds--;
        countdownEl.innerText = seconds;

        if (seconds <= 0) {
            clearInterval(timer);
            // Redirect to the Login Action
            window.location.href = '@Url.Action("Login", "User")';
        }
    }, 1000);
</script>