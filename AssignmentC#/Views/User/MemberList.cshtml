@model IEnumerable<Member>

@{
    ViewBag.Title = "Admin | UserList";
}

@section head {
    <style>
        /* Styles for the user photo thumbnail */
        .user-photo-thumbnail {
            width: 50px; /* Reduced size for cleaner table */
            height: 50px;
            object-fit: cover;
            border-radius: 5px; /* Optional: Make it look a bit nicer */
        }
        /* Style for the table to improve readability */
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
}

@if (Model != null)
{
    <p>@Model.Count() user record(s)</p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                <th>@Html.DisplayNameFor(model => model.First().PhotoURL)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UserId</td>
                    <td>@u.Name</td>
                    <td>@u.Gender</td>
                    <td>@u.Email</td>
                    <td>@u.Phone</td>
                    <td>
                        <img src="@u.PhotoURL" class="user-photo-thumbnail" alt="User Photo of @u.Name"
                             onerror="this.onerror=null; this.src='/img/default.jpg';" /> @* Added fallback for broken images *@
                    </td>
                    <td>
                        @* CRITICAL FIX: Use asp-tag helpers to link to AdminEditUser *@
                        <a asp-controller="Admin" asp-action="AdminEditUser" asp-route-id="@u.UserId" class="btn btn-sm btn-info">
                            Update
                        </a>

                        <form asp-action="AdminDeleteUser" asp-controller="Admin" method="post"
                              style="display:inline;" onsubmit="return confirm('Permanently delete user @u.Name?');">
                            <input type="hidden" name="id" value="@u.UserId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-warning">No user data available or an error occurred loading the data.</p>
}