@model PaginatedList<Member>

@{
    ViewBag.Title = "Admin | UserList";
    var currentUrl = Context.Request.Path + Context.Request.QueryString;
}

@section head {
    <style>
        .user-photo-thumbnail {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>

        <div class="btn-group" role="group" aria-label="User Categories">
            <a asp-action="MemberList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "MemberList" ? "active" : "")">
                All Members
            </a>
            <a asp-action="StaffList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "StaffList" ? "active" : "")">
                Staff Only
            </a>
            <a asp-action="AdminList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "AdminList" ? "active" : "")">
                Admins Only
            </a>
        </div>
    </div>

    @* Added Search Bar to match your StaffList improvement *@
    <div class="row mb-3 align-items-end">
        <div class="col-md-4">
            <h6 class="fw-bold">Search Members</h6>
            <input type="text" id="searchInput" class="form-control shadow-sm" placeholder="Search by name or email..." value="@Model.SearchString" />
        </div>
        <div class="col-md-8 text-end">
            <a asp-action="AdminAddUser" asp-controller="Admin" asp-route-role="Member" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-lg"></i> Add New Member
            </a>
        </div>
    </div>

    @* Wrapped the table in this ID for AJAX swapping *@
    <div id="tableContainer">
        <partial name="_MemberList" model="Model" />
    </div>
</div>

@* Delete Modal remains exactly the same *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AdminDeleteUser" asp-controller="Admin" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="deleteUserName"></strong>?</p>
                    <input type="hidden" name="id" id="deleteUserId" />
                    <input type="hidden" name="returnUrl" value="@currentUrl" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let currentSort = "@Model.SortOrder";

            function loadData(page, sort, search) {
                // Smooth transition: fade out table while loading
                $('#tableContainer').css('opacity', '0.5');

                $.ajax({
                    url: '@Url.Action("MemberList", "User")',
                    type: 'GET',
                    data: { pageNumber: page, sortOrder: sort, searchString: search },
                    headers: { "X-Requested-With": "XMLHttpRequest" },
                    success: function (result) {
                        $('#tableContainer').html(result).css('opacity', '1');
                    }
                });
            }

            // Smooth Search with 300ms delay
            let typingTimer;
            $('#searchInput').on('input', function () {
                clearTimeout(typingTimer);
                typingTimer = setTimeout(() => {
                    loadData(1, currentSort, $(this).val());
                }, 300);
            });

            // Handles both Sorting and Pagination clicks
            $(document).on('click', '.page-link, .sort-link', function (e) {
                e.preventDefault();
                let page = $(this).data('page') || 1;
                let sort = $(this).data('sort') || currentSort;
                if ($(this).hasClass('sort-link')) currentSort = sort;

                loadData(page, currentSort, $('#searchInput').val());
            });
        });

        function openDeleteModal(id, name) {
            document.getElementById('deleteUserId').value = id;
            document.getElementById('deleteUserName').innerText = name;
            var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            myModal.show();
        }
    </script>
}