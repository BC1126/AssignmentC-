@model IEnumerable<Staff>

@{
    ViewBag.Title = "Admin | StaffList";
    var currentUrl = Context.Request.Path + Context.Request.QueryString;
}

@section head {
    <style>
        .table th, .table td {
            vertical-align: middle;
        }
        /* Elevates the table area with padding and a subtle shadow */
        .table-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
}

@* Everything is wrapped in this container for side spacing *@
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>

        @* Category Navigation *@
        <div class="btn-group" role="group" aria-label="User Categories">
            <a asp-action="MemberList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "MemberList" ? "active" : "")">
                All Members
            </a>
            <a asp-action="StaffList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "StaffList" ? "active" : "")">
                Staff Only
            </a>
            <a asp-action="AdminList" asp-controller="User"
               class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "AdminList" ? "active" : "")">
                Admins Only
            </a>
        </div>
    </div>

    @* Aligned button with the table edge *@
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="AdminAddUser" asp-controller="Admin" asp-route-role="Staff" class="btn btn-success shadow-sm">
            <i class="bi bi-person-plus-fill"></i> Add New Staff
        </a>
    </div>

    @if (Model != null)
    {
        <div class="table-container border">
            <p class="text-muted">Showing @Model.Count() staff record(s)</p>

            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td><strong>@u.UserId</strong></td>
                                <td>@u.Name</td>
                                <td>@u.Gender</td>
                                <td>@u.Email</td>
                                <td>@u.Phone</td>
                                <td class="text-center">
                                    <a asp-controller="Admin" asp-action="AdminEditUser"
                                       asp-route-id="@u.UserId"
                                       asp-route-returnUrl="@currentUrl"
                                       class="btn btn-sm btn-info text-white">
                                        Update
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger"
                                            onclick="openDeleteModal('@u.UserId', '@u.Name')">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning shadow-sm">No staff data available or an error occurred loading the data.</div>
    }
</div>

@* Delete Modal remains outside the container *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AdminDeleteUser" asp-controller="Admin" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="deleteUserName"></strong>?</p>
                    <input type="hidden" name="id" id="deleteUserId" />
                    <input type="hidden" name="returnUrl" value="@currentUrl" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openDeleteModal(id, name) {
            document.getElementById('deleteUserId').value = id;
            document.getElementById('deleteUserName').innerText = name;
            var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            myModal.show();
        }
    </script>
}