@* Views/User/Profile.cshtml *@
@model AssignmentC_.Models.User // Ensure this is your base User model

@{
    ViewData["Title"] = "My Profile";

    // Safety check: Determine the photo path safely based on the model type
    string photoPath = "/images/default_profile.png"; // Default image path

    // If the currently loaded model is a Member, use its PhotoURL property
    if (Model is AssignmentC_.Models.Member memberModel)
    {
        // Use the photo path from the Member model, but only if it's not null or empty.
        if (!string.IsNullOrEmpty(memberModel.PhotoURL))
        {
            photoPath = memberModel.PhotoURL;
        }
    }
}

<div class="container mt-5">
    <h1 class="mb-4">Personal Profile: @Model.Name</h1>
    <hr />

    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@photoPath" class="img-thumbnail rounded-circle mb-3"
                 alt="Profile Photo" style="width: 150px; height: 150px; object-fit: cover;">
        </div>

        <div class="col-md-8">
            <h3>Account Details</h3>
            <dl class="row border p-3 rounded shadow-sm">

                <dt class="col-sm-4">Full Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Gender:</dt>
                <dd class="col-sm-8">
                    @(Model.Gender == "M" ? "Male" :
                                        Model.Gender == "F" ? "Female" :
                                        "Not Specified")
                </dd>

                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Model.Phone</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="EditProfile" asp-controller="User" class="btn btn-warning me-2">
                    <i class="fa fa-edit"></i> Edit Profile
                </a>
                <a asp-action="ChangePassword" asp-controller="User" class="btn btn-secondary">
                    <i class="fa fa-key"></i> Change Password
                </a>
            </div>
        </div>
    </div>
</div>