@model AssignmentC_.Models.User

@{
    ViewData["Title"] = "My Profile";

    // Logic to determine photo path
    string photoPath = "/img/default.jpg"; // Default image
    bool isMember = false;
    string role = "User"; // Default role text

    if (Model is AssignmentC_.Models.Member memberModel)
    {
        isMember = true;
        role = "Member";
        if (!string.IsNullOrEmpty(memberModel.PhotoURL))
        {
            photoPath = memberModel.PhotoURL;
        }
    }
    else if (User.IsInRole("Staff"))
    {
        role = "Staff";
    }
    else if (User.IsInRole("Admin"))
    {
        role = "Admin";
    }
}

<section id="profile" class="p_3">
    <div class="container-xl">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="login_1m p-5 bg-light shadow-sm" style="background-color: white !important; border-radius: 8px;">

                    <h2 class="text-center mb-4 fw-bold" style="font-family: 'Georgia', serif;">Account Details</h2>

                    <div class="row">
                        <div class="col-md-4 text-center border-end">
                            <div class="mb-3">
                                <img src="@photoPath"
                                     class="rounded-circle img-thumbnail shadow-sm"
                                     alt="Profile Photo"
                                     style="width: 150px; height: 150px; object-fit: cover;"
                                     onerror="this.onerror=null; this.src='/img/default.jpg';" />
                            </div>

                            <h5 class="fw-bold text-dark">@Model.Name</h5>
                            <p class="text-muted small">@role</p>
                        </div>

                        <div class="col-md-8 ps-md-5">
                            <h5 class="border-bottom pb-2 mb-3 fw-bold text-muted text-uppercase small">Contact Information</h5>

                            <div class="mb-3">
                                <label class="fw-bold text-dark">Email Address</label>
                                <p class="text-muted">@Model.Email</p>
                            </div>

                            <div class="mb-3">
                                <label class="fw-bold text-dark">Phone Number</label>
                                <p class="text-muted">@(string.IsNullOrEmpty(Model.Phone) ? "Not Provided" : Model.Phone)</p>
                            </div>

                            <h5 class="border-bottom pb-2 mb-3 mt-4 fw-bold text-muted text-uppercase small">Personal Information</h5>

                            <div class="row">
                                <div class="col-12">
                                    <label class="fw-bold text-dark">Gender</label>
                                    <p class="text-muted">
                                        @if (Model.Gender == "M")
                                        {
                                            <span>Male</span>
                                        }
                                        else if (Model.Gender == "F")
                                        {
                                            <span>Female</span>
                                        }
                                        else
                                        {
                                            <span>Not Specified</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center d-flex justify-content-center gap-3">
                        <a asp-action="EditProfile" asp-controller="User" class="btn btn-warning text-dark px-4 shadow-sm">
                            <i class="fa fa-edit"></i> Edit Profile
                        </a>
                        <a asp-action="ChangePassword" asp-controller="User" class="btn btn-outline-secondary px-4 shadow-sm">
                            <i class="fa fa-key"></i> Change Password
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>