@{
    ViewData["Title"] = "Access Denied";
}

<style>
    .access-denied-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .error-card {
        padding: 3rem;
        border-radius: 1.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        max-width: 600px;
        width: 100%;
        transition: transform 0.3s ease;
    }

    .error-card:hover {
        transform: translateY(-5px);
    }

    .error-icon {
        font-size: 5rem;
        color: #dc3545;
        margin-bottom: 1.5rem;
    }

    .error-code {
        font-weight: 800;
        font-size: 1.2rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        color: #6c757d;
    }
</style>

@{
    string targetController = "Home";
    string targetAction = "Index";

    if (User.IsInRole("Admin"))
    {
        targetController = "Admin"; 
        targetAction = "AdminDashboard";
    }
    else if (User.IsInRole("Staff"))
    {
        targetController = "Staff";
        targetAction = "StaffDashboard";
    }
}

<div class="container access-denied-container">
    <div class="error-card text-center border">
        <div class="error-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-shield-lock-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.8 11.8 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7 7 0 0 0 1.048-.625 11.8 11.8 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.54 1.54 0 0 0-1.044-1.263 63 63 0 0 0-2.887-.87C9.843.266 8.69 0 8 0m0 5a1.5 1.5 0 0 1 .5 2.915V10a.5.5 0 0 1-1 0V7.915A1.5 1.5 0 0 1 8 5" />
            </svg>
        </div>

        <p class="error-code mb-1">Error 403</p>
        <h1 class="display-5 fw-bold text-dark">Access Denied</h1>
        <hr class="w-25 mx-auto my-4 border-danger border-2">

        <p class="lead text-muted mb-4">
            Oops! It looks like you don't have the required permissions to access this page.
            If you believe this is an error, please contact your administrator.
        </p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="@targetController" asp-action="@targetAction" class="btn btn-primary btn-lg px-4 gap-3">Return Home</a>

            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">Go Back</a>
        </div>
    </div>
</div>