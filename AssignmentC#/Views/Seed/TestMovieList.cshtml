@model List<AssignmentC_.Models.Movie>
@{
    ViewData["Title"] = "Movie Showtime Test";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #fff;
    }

    .test-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .test-header {
        text-align: center;
        margin-bottom: 50px;
    }

        .test-header h1 {
            font-size: 3rem;
            margin-bottom: 10px;
            color: #e50914;
        }

    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }

    .movie-card {
        background: #242424;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s;
        cursor: pointer;
    }

        .movie-card:hover {
            transform: translateY(-10px);
        }

    .movie-poster {
        width: 100%;
        height: 350px;
        background: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #666;
    }

    .movie-info {
        padding: 20px;
    }

    .movie-title {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .movie-meta {
        font-size: 0.9rem;
        color: #888;
        margin-bottom: 15px;
    }

    .btn-book {
        width: 100%;
        padding: 12px;
        background: #e50914;
        color: white;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .btn-book:hover {
            background: #b20710;
            color: white;
        }

    .seed-section {
        background: #242424;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 40px;
        text-align: center;
    }

    .btn-seed {
        padding: 15px 40px;
        background: #4caf50;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        margin: 10px;
    }

        .btn-seed:hover {
            background: #388e3c;
            color: white;
        }

    .alert-custom {
        background: #333;
        border-left: 4px solid #e50914;
        padding: 15px 20px;
        border-radius: 5px;
        margin-bottom: 30px;
    }
</style>

<div class="test-container">
    <div class="test-header">
        <h1>🎬 Movie Showtime Test System</h1>
        <p style="font-size: 1.2rem; color: #888;">Test the GSC-style movie showtime selection</p>
    </div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success alert-custom">
            @TempData["Info"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-custom">
            @TempData["Error"]
        </div>
    }

    <div class="seed-section">
        <h3>🌱 Setup Test Data</h3>
        <p style="color: #888; margin: 20px 0;">
            Generate test data with 5 movies, 3 cinemas, multiple halls (Standard, Premium, IMAX, 4DX),
            and showtimes for the next 7 days
        </p>
        <a href="@Url.Action("MovieShowtimeTestData", "Seed")" class="btn-seed">
            Generate Test Data
        </a>
        <a href="@Url.Action("CleanTestData", "Seed")" class="btn-seed" style="background: #f44336;">
            🧹 Clean All Data
        </a>
        <a href="@Url.Action("TestMovieList", "Seed")" class="btn-seed" style="background: #2196f3;">
            Refresh Movie List
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <h2 style="margin-bottom: 30px;">Available Movies</h2>
        <div class="movie-grid">
            @foreach (var movie in Model)
            {
                <div class="movie-card">
                    <div class="movie-poster">
                        🎬
                    </div>
                    <div class="movie-info">
                        <div class="movie-title">@movie.Title</div>
                        <div class="movie-meta">
                            <div>@movie.Rating | @movie.DurationMinutes min</div>
                            <div>@movie.Genre</div>
                        </div>
                        <a href="@Url.Action("selectShowtime", "Booking", new { movieId = movie.MovieId })"
                           class="btn-book">
                            Get Tickets
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert-custom" style="text-align: center; border-left: 4px solid #ffc107;">
            <h4>⚠️ No Movies Found</h4>
            <p>Please generate test data first by clicking the button above.</p>
        </div>
    }

    <div style="margin-top: 60px; padding: 30px; background: #242424; border-radius: 10px;">
        <h3 style="margin-bottom: 20px;">📋 Test Data Includes:</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;">
            <div>
                <h5 style="color: #e50914;">Movies (5)</h5>
                <ul style="color: #888;">
                    <li>Avengers: Endgame</li>
                    <li>The Dark Knight</li>
                    <li>Inception</li>
                    <li>Interstellar</li>
                    <li>Parasite</li>
                </ul>
            </div>
            <div>
                <h5 style="color: #e50914;">Cinemas (3)</h5>
                <ul style="color: #888;">
                    <li>Mid Valley Megamall (KL)</li>
                    <li>1 Utama (PJ)</li>
                    <li>Pavilion KL</li>
                </ul>
            </div>
            <div>
                <h5 style="color: #e50914;">Hall Types (4)</h5>
                <ul style="color: #888;">
                    <li>Standard (RM 15)</li>
                    <li>Premium (RM 20)</li>
                    <li>IMAX (RM 25)</li>
                    <li>4DX (RM 30)</li>
                </ul>
            </div>
            <div>
                <h5 style="color: #e50914;">Features</h5>
                <ul style="color: #888;">
                    <li>7 days of showtimes</li>
                    <li>Multiple times per day</li>
                    <li>50 seats per hall</li>
                    <li>VIP & wheelchair seats</li>
                </ul>
            </div>
        </div>
    </div>
</div>